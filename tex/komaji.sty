%% \symbol{48} through \symbol{67} are for arabic numbers.
%% Example: \num2 => arabic number two
%%          \Num2 => upside down of arabic number two.
\def\num#1{\w=#1\advance\w by 0\mbox{{\ifcase \w \or １\or２\or３\or４\or５\or６\or７\or８\or９\fi}}}
\def\Num#1{\w=#1\advance\w by 0 \rev{{\ifcase \w \or１\or２\or ３\or４\or５\or６\or７\or８\or９\fi}}}

%% \symbol{68} through \symbol{77} are for chinese numbers.
%% Example: \jnum2 => chinese number two
\def\jnum#1{\w=#1%
	\ifAlphabetOrdinate
		\advance\w by 96\mbox{\tt\char\w}%
	\else
		\advance\w by -1 \mbox{{\ifcase \w 一\or二\or三\or四\or五\or六\or七\or八\or九\fi}}%
	\fi}

